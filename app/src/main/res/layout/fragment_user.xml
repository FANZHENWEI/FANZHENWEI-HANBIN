<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FF8619">
        <ImageView
            android:id="@+id/ic_tx"
            android:layout_width="@dimen/ds_60dp"
            android:layout_height="@dimen/ds_60dp"
            android:layout_margin="@dimen/dp_40"
            android:background="@drawable/ic_circle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_toRightOf="@+id/ic_tx"
                android:text="이름 설정"
                android:textColor="@color/white" />

        </RelativeLayout>



        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_dietplan_btn_search2"
            android:gravity="center"
            android:visibility="gone"
            android:text="个人信息界面"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/rl_height"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_54dp"
            android:background="@color/white"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/ic_m1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ds_20dp"
                android:paddingTop="@dimen/ds_10dp"
                android:paddingBottom="@dimen/ds_10dp"
                android:text="신체 데이터"
                android:textSize="@dimen/ds_14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_0.5dp"
            android:layout_below="@+id/rl_clean_cache"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_54dp"
            android:background="@color/white"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/ic_m2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ds_20dp"
                android:paddingTop="@dimen/ds_10dp"
                android:paddingBottom="@dimen/ds_10dp"
                android:text="나의 위시리스트"
                android:textSize="@dimen/ds_14sp"
                tools:ignore="HardcodedText,RtlHardcoded" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_0.5dp"
            android:layout_below="@+id/rl_clean_cache"
            android:background="@color/grey" />


    </LinearLayout>


</ScrollView>