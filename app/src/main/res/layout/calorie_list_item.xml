<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_margin="@dimen/space_10dp"
    android:layout_height="60dp" >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_80"
    android:layout_margin="@dimen/text10"
    android:gravity="center"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/tv_stu_pic"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/text10"
            android:visibility="gone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <TextView
            android:id="@+id/tv_stu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    <TextView
        android:id="@+id/tv_obj_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/text10"
            android:text="이름" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/text10"
            android:text="묘사" />

 <RelativeLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:visibility="gone"
     android:orientation="horizontal">

     <TextView
         android:id="@+id/tv_calorie"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true"
         android:layout_gravity="center"
         android:layout_marginRight="@dimen/text10"
         android:gravity="right"
         android:text="100千卡" />
 </RelativeLayout>
</LinearLayout>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/icon_dot"
        android:textColor="@color/orange"
        android:textSize="@dimen/ds_100dp" />
</RelativeLayout>