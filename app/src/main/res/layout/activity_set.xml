<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="false">
    <!--设置界面false-->
    <include
        android:id="@+id/include_top_green"
        layout="@layout/include_top_title_green"
        android:visibility="visible" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/ic_bgcal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--客服-->
    <RelativeLayout
        android:id="@+id/rl_waiter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_54dp"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_20dp"
            android:paddingTop="@dimen/ds_10dp"
            android:paddingBottom="@dimen/ds_10dp"
            android:text="성별"
            android:textSize="@dimen/ds_14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <ImageView
            android:id="@+id/iv_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_10dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:layout_marginEnd="@dimen/space_10dp"
            android:layout_marginBottom="@dimen/space_10dp"
            android:background="@drawable/ic_male_unselect"
            android:gravity="right" />

        <ImageView
            android:id="@+id/iv_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_10dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:layout_marginEnd="@dimen/space_10dp"
            android:layout_marginBottom="@dimen/space_10dp"
            android:layout_toLeftOf="@+id/iv_male"
            android:background="@drawable/ic_female_unselect"
            android:gravity="right" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_0.5dp"
        android:layout_below="@+id/rl_clean_cache"
        android:background="@color/grey" />
    <RelativeLayout
        android:id="@+id/rl_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_54dp"
        android:layout_below="@+id/rl_waiter"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_20dp"
            android:paddingTop="@dimen/ds_10dp"
            android:paddingBottom="@dimen/ds_10dp"
            android:text="키"
            android:textSize="@dimen/ds_14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:text="cm"/>

        <EditText
            android:id="@+id/et_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_16dp"
            android:layout_marginRight="@dimen/ds_20dp"
            android:layout_toLeftOf="@+id/tv_height"
            android:gravity="right"
            android:hint="입력해 주세요"
            android:inputType="numberDecimal"
            android:textSize="@dimen/ds_12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_0.5dp"
        android:layout_below="@+id/rl_clean_cache"
        android:background="@color/grey" />
    <RelativeLayout
        android:id="@+id/rl_weight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_54dp"
        android:layout_below="@+id/rl_waiter"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_20dp"
            android:paddingTop="@dimen/ds_10dp"
            android:paddingBottom="@dimen/ds_10dp"
            android:text="무게"
            android:textSize="@dimen/ds_14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:text="kg"/>

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_16dp"
            android:layout_marginRight="@dimen/ds_20dp"
            android:layout_toLeftOf="@+id/tv_weight"
            android:gravity="right"
            android:hint="입력해 주세요"
            android:textSize="@dimen/ds_12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_0.5dp"
        android:layout_below="@+id/rl_clean_cache"
        android:background="@color/grey" />
    <RelativeLayout
        android:id="@+id/rl_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_54dp"
        android:layout_below="@+id/rl_waiter"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_20dp"
            android:paddingTop="@dimen/ds_10dp"
            android:paddingBottom="@dimen/ds_10dp"
            android:text="나이"
            android:textSize="@dimen/ds_14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_16dp"
            android:layout_marginRight="@dimen/ds_20dp"
            android:gravity="right"
            android:hint="선택해 주세요"
            android:textSize="@dimen/ds_12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_0.5dp"
        android:layout_below="@+id/rl_clean_cache"
        android:background="@color/grey" />
    <RelativeLayout
        android:id="@+id/rl_run"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_54dp"
        android:layout_below="@+id/rl_waiter"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_20dp"
            android:paddingTop="@dimen/ds_10dp"
            android:paddingBottom="@dimen/ds_10dp"
            android:text="운동 습관"
            android:textSize="@dimen/ds_14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/et_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_16dp"
            android:layout_marginRight="@dimen/ds_20dp"
            android:gravity="right"
            android:hint="선택해 주세요"
            android:textSize="@dimen/ds_12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_0.5dp"
        android:layout_below="@+id/rl_clean_cache"
        android:background="@color/grey" />
    <RelativeLayout
        android:id="@+id/rl_target"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_54dp"
        android:layout_below="@+id/rl_waiter"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_20dp"
            android:paddingTop="@dimen/ds_10dp"
            android:paddingBottom="@dimen/ds_10dp"
            android:text="현재 목표"
            android:textSize="@dimen/ds_14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <EditText
            android:id="@+id/et_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_16dp"
            android:layout_marginRight="@dimen/ds_20dp"
            android:gravity="right"
            android:hint="선택해 주세요"
            android:textSize="@dimen/ds_12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_0.5dp"
        android:layout_below="@+id/rl_clean_cache"
        android:background="@color/grey" />

    <!--退出-->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="200dp"
        android:layout_height="@dimen/ds_51dp"
        android:layout_below="@+id/tv_line_with"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ds_16dp"
        android:background="@drawable/app_button_background_red"
        android:text="확인 제출"
        android:textSize="@dimen/ds_17sp"
        tools:ignore="HardcodedText" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
