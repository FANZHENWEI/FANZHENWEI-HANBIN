<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFE5CE"
    tools:context=".fragment.DietPlanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FF8619">

            <ImageView
                android:id="@+id/iv_rabbit"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:src="@mipmap/welcome"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignTop="@id/iv_rabbit"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/iv_rabbit"
                android:background="@drawable/bg_dietplan_texttips"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일일 권장 열량 섭취"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:textColor="#6B3C17"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginHorizontal="20dp"
                    android:background="#6B3C17"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1821~1291"
                        android:textStyle="bold"
                        android:textColor="@color/bg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Kcal" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="체중, 키, 나이 변화, 다시 계산해야 합니다~"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_recal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/iv_rabbit"
                android:background="@drawable/bg_dietplan_btn_search"
                android:gravity="center"
                android:text="다시 계산>"
                android:textColor="#FADCB3" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_input"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:src="@mipmap/icon_search"
                    app:tint="#737373"
                    />

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="음식 이름을 입력하세요"
                    android:imeActionLabel="搜索"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#737373"
                    android:textSize="16sp"
                    />

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_search_input"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/btn_breakfast"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_1"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv1"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv1"
                android:text="아침"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv1"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv1"
                android:text="권장 531.3~591.3Kcal"
                android:textColor="#5F5F5F"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#AFAFAF"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/toright" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <ListView
                android:id="@+id/listview_zao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/line"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:background="@drawable/ic_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기록 추가"
                android:gravity="center"
                android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/btn_launch"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_2"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv2"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv2"
                android:text="점심"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv2"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv2"
                android:text="권장 718.4~778.4Kcal"
                android:textColor="#5F5F5F"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="#AFAFAF" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/toright"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_add2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <ListView
                android:id="@+id/listview_wu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/line"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기록 추가"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/btn_dinner"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_3"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv3"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv3"
                android:text="저녁"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv3"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv3"
                android:text="권장 531.3~591.3Kcal"
                android:textColor="#5F5F5F"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#AFAFAF"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/toright"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_add3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <ListView
                android:id="@+id/listview_wan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/line"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기록 추가"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_snack"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_4"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv4"
                android:text="식사 추가"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/toright"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/tv_analyse"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_dietplan_btn_search2"
            android:gravity="center"
            android:text="식생활 분석 보기"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FADCB3" />

    </LinearLayout>


</ScrollView>