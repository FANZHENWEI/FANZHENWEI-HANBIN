<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RefreshLayout">
        <attr name="loadMoreEnable" format="boolean"/>
        <attr name="refreshEnable" format="boolean"/>
        <attr name="loadStyle" format="enum">
            <enum name="black" value="0"/>
            <enum name="white" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="RefreshView">
        <attr name="enableLoadMore" format="boolean"/>
        <attr name="enableRefresh" format="boolean"/>
        <attr name="showNoData" format="boolean"/>
        <attr name="showLoading" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="DrawableTextView">
        <attr name="drawableSize" format="dimension"/>
        <attr name="top_drawableSize" format="dimension"/>
        <attr name="left_drawableSize" format="dimension"/>
        <attr name="right_drawableSize" format="dimension"/>
        <attr name="bottom_drawableSize" format="dimension"/>
        <attr name="top_drawable" format="reference"/>
        <attr name="left_drawable" format="reference"/>
        <attr name="right_drawable" format="reference"/>
        <attr name="bottom_drawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MyViewPager">
        <attr name="canScroll" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="title_textSize" format="dimension"/>
        <attr name="indicatorWidth" format="dimension"/>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="normalColor" format="color"/>
        <attr name="lightColor" format="color"/>
        <attr name="currentItem" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ImageTextView">
        <attr name="imageSrc" format="reference"/>
        <attr name="imageWidth" format="dimension"/>
        <attr name="text1" format="string"/>
        <attr name="textColor1" format="color"/>
        <attr name="textHeight" format="dimension"/>
        <attr name="textSize1" format="dimension"/>
        <attr name="textMargin" format="dimension"/>
        <attr name="textMarginLeft" format="dimension"/>
        <attr name="textMarginRight" format="dimension"/>
        <attr name="textMarginTop" format="dimension"/>
        <attr name="textMarginBottom" format="dimension"/>
        <attr name="imageMargin" format="dimension"/>
        <attr name="imageMarginLeft" format="dimension"/>
        <attr name="imageMarginRight" format="dimension"/>
        <attr name="imageMarginTop" format="dimension"/>
        <attr name="imageMarginBottom" format="dimension"/>
        <attr name="imagePadding" format="dimension"/>
        <attr name="isChecked" format="boolean"/>
        <attr name="checkedImageSrc" format="reference"/>
        <attr name="checkedTextColor" format="color"/>
    </declare-styleable>


</resources>